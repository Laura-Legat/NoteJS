<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form action="http://localhost:3000/api/thoughts" method="post">
        <input type="text" placeholder="Thought" name="thought">
        <button type="submit">Submit</button>
    </form>

    <% data.forEach(function(thought) { %>
        <p>
            <%= thought.thought %>
        </p>
        <br />
        <p>
            <%= thought.timestamp %>
        </p>
        <br />
        <% }); %>


</body>

</html>